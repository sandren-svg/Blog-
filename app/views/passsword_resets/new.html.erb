<h1>Forgot Your Password?<h1>

<%= form_with url: password_reset_path, data: {turbo:false} do |form| %>
    <div class = "mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "test@gmail.com" %>
    </div>
    
    <div class = "mb-3">
    <%= form.submit "Reset Password", class: "btn btn-primary"%>
    </div>
<% end %>
